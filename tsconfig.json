{
  "compilerOptions": {
    "outDir": "./tsbuild/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib":["es6", "dom.iterable", "scripthost", "es2016.array.include", "es2015.promise", "es2017"],
    "strictNullChecks": true,
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "dist"
  ]
}